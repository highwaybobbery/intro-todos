<%= form_for @todo do |form| %>
  <% if @todo.errors.any? %>
    <ul class="errors">
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit "Create" %>
<% end %>
